    \centering{{\bfseries\gtfamily\fontsize{21truept}{0em}\selectfont\@title}}
    \vspace{1truemm}
    \tcbline 
    \raggedleft{\gtfamily\fontsize{10.5truept}{0em}\selectfont\@date}
